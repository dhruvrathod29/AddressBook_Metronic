@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model AddressBook_Metronic.Areas.LOC_Country.Models.LOC_CountryModel

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Country Add/Edit Page</span>
                </li>
            </ul>

        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Country Add/Edit</span>
                </div>
                @*<div class="actions">
                <div class="btn-group btn-group-devided" data-toggle="buttons">
                <label class="btn btn-transparent dark btn-outline btn-circle btn-sm active">

                <input  type="radio" name="options" class="toggle" id="option1">Country List
                </label>

                </div>
                </div>*@
            </div>


            <div class="portlet-body form">
                <h4 class="font-green-sharp">@TempData["EventCategoryInsertMsg"]</h4>
                <form class="form-horizontal" role="form" method="post" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(x=>x.CountryID)
                    <div class="form-body">

                       
                       
                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Country Name</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Country Name" required asp-for="CountryName" class="form-control" />
                                <span asp-validation-for="CountryName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Country Code</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Country Code" required asp-for="CountryCode" class="form-control" />
                                <span asp-validation-for="CountryCode" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" class="btn green" value="Save" />
                                <a class="btn default" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>




           
        </div>


    </div>
    <!-- END CONTENT BODY -->
</div>