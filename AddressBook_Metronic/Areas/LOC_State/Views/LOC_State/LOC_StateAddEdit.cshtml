@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model AddressBook_Metronic.Areas.LOC_State.Models.LOC_StateModel

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>State Add/Edit Page</span>
                </li>
            </ul>

        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">State Add/Edit</span>
                </div>
               
               
            </div>

            <div class="portlet-body form">
                <h4 class="font-green-sharp">@TempData["EventCategoryInsertMsg"]</h4>
                <form class="form-horizontal" role="form" method="post" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Save">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(x=>x.StateID)
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Country</label>
                            <div class="col-md-9">
                                <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))" class="form-control">
                                    <option value="">Select Country</option>
                                </select>
                                <span asp-validation-for="CountryID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>State Name</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter State Name" asp-for="StateName" class="form-control" />
                                <span asp-validation-for="StateName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>State Code</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter State Code" asp-for="StateCode" class="form-control" />
                                <span asp-validation-for="StateCode" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" class="btn green" value="Save" />
                                <a class="btn default" asp-area="LOC_State" asp-controller="LOC_State" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>


    </div>
    <!-- END CONTENT BODY -->
</div>