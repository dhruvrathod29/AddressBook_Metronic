@{
    ViewData["Title"] = "Contact Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model AddressBook_Metronic.Areas.CON_Contact.Models.CON_ContactModel

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>Contact Add/Edit Page</span>
                </li>
            </ul>

        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Contact Add/Edit</span>
                </div>
               
            </div>

            <div class="portlet-body form">
                <h4 class="font-green-sharp">@TempData["EventCategoryInsertMsg"]</h4>
                <form class="form-horizontal" role="form" method="post" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Save" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(x=>x.ContactID)
                    @Html.HiddenFor(x=>x.PhotoPath)
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Country</label>
                            <div class="col-md-9">
                                <select asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))" class="form-control" onchange="stateChange()">
                                    <option value="">Select Country</option>
                                </select>
                                <span asp-validation-for="CountryID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>State</label>
                            <div class="col-md-9">
                                <select asp-for="StateID" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))" class="form-control" onchange="cityChange()">
                                    <option value="">Select State</option>
                                </select>
                                <span asp-validation-for="StateID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>City</label>
                            <div class="col-md-9">
                                <select asp-for="CityID" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))" class="form-control">
                                    <option value="">Select City</option>
                                </select>
                                <span asp-validation-for="CityID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>ContactCategory</label>
                            <div class="col-md-9">
                                <select asp-for="ContactCategoryID" asp-items="@(new SelectList(ViewBag.ContactCategoryList,"ContactCategoryID","ContactCategoryName"))" class="form-control">
                                    <option value="">Select ContactCategory</option>
                                </select>
                                <span asp-validation-for="ContactCategoryID" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Contact Name</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Contact Name" asp-for="ContactName" class="form-control" />
                                <span asp-validation-for="ContactName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Address</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Address" asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Pincode</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter PinCode" asp-for="PinCode" class="form-control" />
                                <span asp-validation-for="PinCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Mobile No</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Mobile No" asp-for="MobileNo" class="form-control" />
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Alternet Contact </label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Alternet Contact" asp-for="AlternetContact" class="form-control" />
                                <span asp-validation-for="AlternetContact" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Email</label>
                            <div class="col-md-9">
                                <input type="email" placeholder="Enter Email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Birth Date</label>
                            <div class="col-md-9">
                                <input type="date" placeholder="Enter Birth Date" asp-for="BirthDate" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>LinkedIn</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter LinkedIn Id" asp-for="LinkedIn" class="form-control" />
                                <span asp-validation-for="LinkedIn" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Twitter</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Twitter Id" asp-for="Twitter" class="form-control" />
                                <span asp-validation-for="Twitter" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Instagram</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Instagram Id" asp-for="Insta" class="form-control" />
                                <span asp-validation-for="Insta" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Gender</label>
                            <div class="col-md-9">
                                <input type="text" placeholder="Enter Gender" asp-for="Gender" class="form-control" />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label"><span class="text-danger">*</span>Phtoto Upload</label>
                            <div class="col-md-9">
                                <input type="file" placeholder="Upload Photo" asp-for="File" class="form-control" />
                                <span asp-validation-for="PhotoPath" class="text-danger"></span>
                            </div>
                        </div>

                    </div>

                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <input type="submit" class="btn green" value="Save" />
                                <a class="btn default" asp-area="CON_Contact" asp-controller="CON_Contact" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>


    </div>
    <!-- END CONTENT BODY -->
</div>


@section Scripts{
    <script>

        //State Ajax
        function stateChange() {
            var CountryID = $("#CountryID").val();
            if (CountryID !== "") {
                $("#StateID").empty();
                $("#StateID").append($("<option></option>").val("").html("Select State"));
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    contentType: "application/json; charset=utf-8",
                    url: "@Url.Action("DropDownByCountry","CON_Contact")" + "?CountryID=" + CountryID,
                    dataType: "json",
                    success: function (Result) {
                        console.log(Result);
                        $.each(Result,
                            function (key, value) {
                                $("#StateID").append($("<option></option>").val(value.stateID).html(value.stateName));
                            });
                    },
                    error: function (r) {
                        alert("Error while loading DropDown");
                    }

                });
            }
            else {
                $("#StateID").empty();
                $("#StateID").append($("<option></option>").val("").html("Select State"));
            }
        }


        $(window).on('load', function () {
            console.log('All assets are loaded')
        })
        function abc() {
            alert("Error while change");
        }

        //City Ajax

        function cityChange() {
            var StateID = $("#StateID").val();
            if (StateID !== "") {
                $("#CityID").empty();
                $("#CityID").append($("<option></option>").val("").html("Select City"));
                $.ajax(
                    {
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        url: "@Url.Action("DropDownByState","CON_Contact")" + "?&StateID=" + StateID,
                        data: {},
                        dataType: "json",
                        success: function (Result) {
                            $.each(Result,
                                function (key, value) {
                                    $("#CityID").append($("<option></option>").val(value.cityID).html(value.cityName));
                                });
                        },
                        error: function (r) {
                            alert("Error while loading combobox.");
                        }
                    });
            } else {
                $("#CityID").empty();
                $("#CityID").append($("<option></option>").val("").html("Select City"));
            }
        }


    </script>
}